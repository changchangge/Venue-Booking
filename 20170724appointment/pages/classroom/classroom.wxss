/* pages/classroom/classroom.wxss */

.classroom-head {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid rgba(178, 178, 178, .2);
}

.classroom-head-img {
  height: 340rpx;
  width: 750rpx;
}

.classroom-head-others {
  margin: 30rpx;
  height: 120rpx;
}

.classroom-head-others .building-name {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
  padding-bottom: 30rpx;
}

.classroom-head-others .building-address {
  width: 450rpx;
  float: left;
}

.classroom-head-others .building-phone {
  width: 240rpx;
  float: left;
}

.classroom-list {
  height: 240rpx;
  border-bottom: 2rpx solid rgba(178, 178, 178, .2);
}

.clasroom-list-img {
  width: 200rpx;
  height: 200rpx;
  float: left;
  padding: 20rpx 20rpx 20rpx 30rpx;
}

.classroom-list-right {
  float: left;
  padding: 20rpx 0 20rpx 20rpx;
  height: 200rpx;
}

.classroom-list-right .classroom-name {
  font-size: 34rpx;
  font-weight: bold;
  display: block;
  padding: 10rpx 0;
}

.classroom-list-right-capacity {
  display: block;
  padding-bottom: 8rpx;
}
