/**app.wxss**/

/* reset */

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

checkbox, radio {
  margin-right: 10rpx;
}

button {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

form {
  width: 100%;
}

/* commonStyle */

.main-icon {
  width: 32rpx;
  height: 32rpx;
  padding-right: 20rpx;
  vertical-align: text-bottom;
}

/* page */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  /* justify-content: space-between;  */
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 类似 > 的图标 */

.message-item-icon {
  float: right;
  height: 30rpx;
  width: 30rpx;
  padding: 25rpx 40rpx;
}

.message-item-content {
  float: left;
  line-height: 80rpx;
  width: 180rpx;
  font-size: 32rpx;
}
