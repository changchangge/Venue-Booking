<!--pages/information/authority/history.wxml-->
<view class="container">
  <view class="classroom-list-contain">
    <view class="classroom-list" id="{{item.id}}" bindtap="toNextPage">
      <image class="clasroom-list-img" src="../../../pic/classroom.jpg"></image>
      <view class="classroom-list-right">
        <text class="classroom-name">{{item.building_name}}</text>
        <view class="classroom-list-right-capacity">
          <image class="main-icon classroom-list-right-icon" src="../../../pic/icon/map.png"></image>
          <text>{{item.classroom_name}}</text>
        </view>
        <view class="classroom-list-right-capacity">
          <image class="main-icon classroom-list-right-icon" src="../../../pic/icon/people.png"></image>
          <text>{{item.company}}</text>
        </view>
        <view class="classroom-list-right-capacity">
          <image class="main-icon classroom-list-right-icon" src="../../../pic/icon/time.png"></image>
          <text>{{item.time}}</text>
        </view>
        <view class="operation">
          <!-- <button type="default" class="button-style" disabled bindtap="agree">{{status}}未通过</button> -->
           <button type="primary" class="button-style" bindtap="agree">同意</button> 
           <button type="default" class="button-style" bindtap="refuse">拒绝</button> 
        </view>
      </view>
    </view>
  </view>
</view>