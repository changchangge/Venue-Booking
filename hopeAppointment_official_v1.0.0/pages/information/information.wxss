/* information.wxss */

.userinfo {
  margin: 40rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  float: left;
}

.userinfo-nickname {
  font-size: 34rpx;
  height: 200rpx;
  line-height: 200rpx;
  margin-left: 60rpx;
}

.message {
  margin: 30rpx 0;
}

.message-item {
  padding: 0 40rpx;
  height: 80rpx;
  border-bottom: 2rpx solid rgba(178, 178, 178, 0.2);
}

.message-item:first-child {
  border-top: 2rpx solid rgba(178, 178, 178, 0.2);
  margin-top: 40rpx;
}

.message-item-content {
  float: left;
  line-height: 80rpx;
  width: 180rpx;
  font-size: 32rpx;
}

.logout {
  width: 690rpx;
  margin-top: 80rpx;
}
